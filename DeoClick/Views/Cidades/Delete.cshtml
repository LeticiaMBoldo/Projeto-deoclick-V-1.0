@model DeoClick.Models.Cidade

@{
    ViewData["Title"] = "Deletar";
}
<div>
    <a asp-action="Index">Voltar</a>
</div>
<br />

<h1 style="color:red;">Deletar</h1>

<h3>Você tem certeza que quer deletar essa Cidade?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nomeCidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nomeCidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.idEstado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estados.nomeEstado)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Deletar Cidade" class="btn btn-danger" />
    </form>
</div>

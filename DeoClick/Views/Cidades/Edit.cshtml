@model DeoClick.Models.Cidade

@{
    ViewData["Title"] = "Editar Cidade";
}

<div>
    <a asp-action="Index">Voltar</a>
</div>
<br />

<h1 style="color:blueviolet">Editar Informação sobre a Cidade</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="nomeCidade" class="control-label"></label>
                <input asp-for="nomeCidade" class="form-control" />
                <span asp-validation-for="nomeCidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idEstado" class="control-label"></label>
                <select asp-for="idEstado" class="form-control" asp-items="ViewBag.idEstado"></select>
                <span asp-validation-for="idEstado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar Cidade" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

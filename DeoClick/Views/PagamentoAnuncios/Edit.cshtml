@model DeoClick.Models.PagamentoAnuncio

@{
    ViewData["Title"] = "Editar o Pagamento Anúncio";
}
<div>
    <a asp-action="Index">Voltar</a>
</div>
<br />
<h1 style="color:blueviolet">Editar Informação sobre o forma de pagamento do Anúncio</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="idFormaPagamento" class="control-label"></label>
                <select asp-for="idFormaPagamento" class="form-control" asp-items="ViewBag.idFormaPagamento"></select>
                <span asp-validation-for="idFormaPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar Pagamento Anúncio" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

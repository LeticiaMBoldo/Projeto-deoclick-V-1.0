@model DeoClick.Models.FormaPagamento

@{
    ViewData["Title"] = "Cadastra Forma de pagamento";
}

<div>
    <a asp-action="Index">Voltar</a>
</div>
<br />

<h1 style="color:blue;">Cadastrar Forma de Pagamento</h1>
<br />
<h5>Aqui você pode Criar as Forma de Pagamento</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="tipoPagamento" class="control-label"></label>
                <input asp-for="tipoPagamento" class="form-control" />
                <span asp-validation-for="tipoPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

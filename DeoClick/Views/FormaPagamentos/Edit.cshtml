@model DeoClick.Models.FormaPagamento

@{
    ViewData["Title"] = "Editar Forma de Pagamento";
}

<div>
    <a asp-action="Index">Voltar</a>
</div>
<br />
<h1 style="color:blueviolet">Editar Informação sobre a forma de Pagamento</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="tipoPagamento" class="control-label"></label>
                <input asp-for="tipoPagamento" class="form-control" />
                <span asp-validation-for="tipoPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar Forma Pagamento" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

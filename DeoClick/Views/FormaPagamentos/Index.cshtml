@model IEnumerable<DeoClick.Models.FormaPagamento>

@{
    ViewData["Title"] = "Forma de Pagamento";
}

<h1 style="color:crimson">Lista de Forma de Pagamento</h1>

<p>
    <a asp-action="Create">Criar Nova Forma de Pagamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tipoPagamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tipoPagamento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id">Descrição</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

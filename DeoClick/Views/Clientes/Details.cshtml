        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nomeEmpresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nomeEmpresa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cepEmpresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cepEmpresa)
        </dd>
        <dt class="col-sm-2">
